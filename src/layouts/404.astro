---
import Layout from '../layouts/Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout>
  <main>
    <section class="container">
      <div class="content">
        <h1 data-inview>{frontmatter.title}</h1>
        <br />
        <h2 data-inview>{frontmatter.subline}</h2>
        <br />
        <br />
        <a href="/">{frontmatter.linkText}</a>
      </div>
    </section>
  </main>
</Layout>

<style lang="scss">
  section {
    margin-block: to-rem(100);
  }

  .content {
    margin-inline: auto;
    max-width: 60ch;
  }
</style>
