---
import '../styles/index.scss';

import { general } from '../content/globals';

import Cursor from '../components/Cursor.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Splash from '../components/Splash.astro';
import Canvas from '../components/Canvas.astro';

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#000000" />
    <title>{`${pageTitle ? pageTitle + ' | ' : ''}${general.siteTitle}`}</title>
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href={canonicalURL} />
    <!-- TODO: remove when going live -->
    <meta name="robots" content="noindex, nofollow" />
    <meta name="description" content={general.siteDescription} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={general.siteTitle} />
    <meta property="og:description" content={general.siteDescription} />
    <meta
      property="og:image"
      content={new URL(general.siteImage.src, Astro.url)}
    />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="de" />
    <link
      rel="preload"
      href="/fonts/Delight-Light.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/Delight-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/Delight-Black.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <script
      is:inline
      defer
      src="https://tracking.jnkl.dev/script.js"
      data-website-id="2888a225-31d7-4387-a5ef-7398a9fc779"
      data-domains="wst-website-new.vercel.app"
      data-do-not-track="true"></script>
  </head>
  <body>
    <Cursor />

    <Header />

    <slot />

    <Footer />

    <Splash />

    <Canvas />
    <script>
      import '../scripts/console.ts';
      import '../scripts/scroll.ts';
      import '../scripts/inview.ts';
    </script>
  </body>
</html>
